<p id="notice"><%= notice %></p>

<h1>Jobs</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Company</th>
      <th>Description</th>
      <th>Location</th>
      <th>Experience type</th>
      <th>Eligibility</th>
      <th>Desired skills</th>
      <th>Salary</th>
      <th>Position</th>
      <th>Job type</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @jobs.each do |job| %>
      <tr>
        <td><%= job.name %></td>
        <td><%= job.company_id %></td>
        <td><%= job.description %></td>
        <td><%= job.location_id %></td>
        <td><%= job.experience_type_id %></td>
        <td><%= job.eligibility %></td>
        <td><%= job.desired_skills %></td>
        <td><%= job.salary %></td>
        <td><%= job.position_id %></td>
        <td><%= job.job_type_id %></td>
        <td><%= link_to 'Show', job %></td>
        <td><%= link_to 'Edit', edit_job_path(job) %></td>
        <td><%= link_to 'Destroy', job, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Job', new_job_path %>
