<p id="notice"><%= notice %></p>

<h1>Jobs</h1>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Company</th>
      <th>Description</th>
      <th>Location</th>
      <th>Experience type</th>
      <th>Eligibility</th>
      <th>Desired skills</th>
      <th>Salary</th>
      <th>Position</th>
      <th>Job type</th>
      <th> Actions</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @jobs.each do |job| %>
      <tr>
        <td><%= job.name %></td>
        <td><%= job.company.name %></td>
        <td><%= job.description %></td>
        <td><%= job.location.name %></td>
        <td><%= job.experience_type.name %></td>
        <td><%= job.eligibility %></td>
        <td><%= job.desired_skills %></td>
        <td><%= job.salary %></td>
        <td><%= job.position.name %></td>
        <td><%= job.job_type.name%></td>
        <td><%= link_to 'Show', job %></td>
        <td><%= link_to 'Edit', edit_job_path(job) %></td>
        <td><%= link_to 'Destroy', job, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Job', new_job_path %>
