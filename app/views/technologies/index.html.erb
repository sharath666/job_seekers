<div class="container">
  <div class="row">
    <div class="col-md-6">
    <p id="notice"><%= notice %></p>

    <h1>Technologies</h1>

    <table class="table">
      <thead>
        <tr>
          <th>Name</th>
          <th> Actions <th>
          
      </thead>

      <tbody>
        <% @technologies.each do |technology| %>
          <tr>
            <td><%= technology.name %></td>
            <td><%= link_to 'Show', technology %>
            <%= link_to 'Edit', edit_technology_path(technology) %>
            <%= link_to 'Destroy', technology, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <br>

    <%= link_to 'New Technology', new_technology_path %>
      </div>
  </div>
</div>