<div class="container">
  <div class="row">
  <p id="notice"><%= notice %></p>

    <div class="col-md-6">.

      <h1>Locations</h1>

      <table class="table">
        <thead>
          <tr>
            <th>Name</th>
            <th>Actions</th>
          </tr>
        </thead>

        <tbody>
          <% @locations.each do |location| %>
            <tr>
              <td><%= location.name %></td>
              <td><%= link_to 'Show', location %>
              <%= link_to 'Edit', edit_location_path(location) %>
              <%= link_to 'Destroy', location, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>

      <br>

      <%= link_to 'New Location', new_location_path %>
    </div>
  </div>
</div>