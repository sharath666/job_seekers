<div class="container">
  <div class="row">
    <div class="col-md-6">
    <p id="notice"><%= notice %></p>

    <h1>Job Types</h1>

    <table class="table">
      <thead>
        <tr>
          <th>Name</th>
          <th>Actions</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @job_types.each do |job_type| %>
          <tr>
            <td><%= job_type.name %></td>
            <td><%= link_to 'Show', job_type %>
            <%= link_to 'Edit', edit_job_type_path(job_type) %>
            <%= link_to 'Destroy', job_type, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <br>

    <%= link_to 'New Job Type', new_job_type_path %>
    </div>
  </div>
</div>